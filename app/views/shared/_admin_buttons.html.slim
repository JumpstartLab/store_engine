/ = form_for product, :html => { :class => 'form-horizontal' } do |f|
= link_to 'Edit', edit_product_path(product), :class => 'btn btn-mini'
/ = hidden_field_tag "product[retired]", true
/ = f.submit 'Retire', :class => 'btn btn-warning btn-mini'
- if product.retired?
  = link_to 'Make Active Again', retire_product_path(product), :method => :put, :confirm => 'Are you sure?', :class => 'btn btn-danger btn-mini'
- else
  = link_to 'Retire', retire_product_path(product), :method => :put, :confirm => 'Are you sure?', :class => 'btn btn-danger btn-mini'

= link_to 'Destroy', product_path(product), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-danger btn-mini'

