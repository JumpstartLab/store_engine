= simple_form_for @product do |f|
  %legend= legend_title
  = f.input :name
  = f.input :description, :input_html => { :rows => 10, :style => 'width: 300px' }
  = f.input :price
  = f.input :avatar
  = f.input :avatar_from_url
  = f.association :categories, :as => :check_boxes
  = f.submit 'Save Product', :class => 'btn btn-primary controls'
%hr
- if @product and @product.id and @product.active == 1
  = link_to 'Retire Product', product_path(@product), :method => :delete