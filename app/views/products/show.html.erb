<div class="hero-unit">
  <div class="row-fluid">
    <div class="span7">
      <h1><%= @product.title %></h1>
        <% if @product.activity == false %>
          <div class="alert alert-error">
            <a class="close" data-dismiss="alert">Ã—</a>
            <strong>This product is retired.</strong> 
            Sorry, you can't buy any more of these.
          </div>
        <% end %>
    </div>
  </div>
</div>

<div class="span4"><img src="<%= @product.image_link %>"></img></div>
<dic class="span8"><h3><%= @product.description %></h3>
<h3><%= number_to_currency(@product.price) %></h3>
<br />
<p>Categories: <% @product.categories.each do |c| %>
      <%= link_to c.title, category_path(c) %>,
      <% end %></p>

<% if admin? %>
  <%= link_to "Edit", edit_product_path(@product), :class => "btn btn-mini" %><%= link_to 'Delete', @product, method: :delete, :class => "btn btn-mini" %>
<% end %> 
<%= link_to "Add to Cart", cart_items_path(:product_id => @product), :method => :post, :class => "btn-small btn-warning" %> | 
<%= link_to "Buy instantly", two_click_orders_path(:product_id => @product), :method => :post, :class => "btn-small btn-danger", :confirm => "Really order #{@product.title} for #{number_to_currency(@product.price)}?" %> | 
<%= link_to "Back to All Products", products_path, :class => "btn" %>
</div>
