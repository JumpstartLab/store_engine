<% if logged_in? %>
  <%= simple_form_for [ current_user, Order.new ], url: buy_now_path do |f| %>
    <%= f.hidden_field :product_id, value: product.id %>
    <%= f.hidden_field :quantity, value: '1' %>
    <%= f.button :submit, 'Buy Now', { onclick: "return confirm('Buy one #{product.title}?')" } %>
  <% end %>
<% else %>
  <%= button_to "Enable 'Buy Now'", login_path, method: :get, class: 'btn' %>
<% end %>
