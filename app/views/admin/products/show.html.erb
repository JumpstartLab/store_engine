<!-- <div class="row"> -->
  <div class="span8">
    <h1>Product: <%= product.title %></h1>
    <p>
      <%= product.description %>
    </p>

    <p>
      Price: <%= product.price %> cents<br />
      Categories: <% product.categories.each do |c| %>
                    <%= c.name %>
                  <% end %>
      <% if product.active? == false %>
        <div class="alert alert-error">
          <h4 class="alert-heading">Warning</h3>
          <p>This product has been retired!</p>
        </div>
      <% end %>
    </p>
  </div>
  <div class="span1">
    <%= image_tag(product.photo) %>
  </div>
<!-- </div> -->
<div class="span9">
  <%= link_to "Add to Cart", cart_items_path(:product_id => product), :method => :post, :class => 'btn btn-success' %>
  <%= link_to "Back to all products", admin_products_path, :title => "back to all products", :class => 'btn'%>
  <%= link_to "Edit this product", edit_admin_product_path(product), :title => "edit this product", :class => 'btn btn-warning' %>
  <%= link_to "Delete this product", admin_product_path(product), :method => :delete, :confirm => "Delete \"#{product.title}\"?", :title => "delete this product", :class => 'btn btn-danger' %>
</div>